<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Loginpage">
    <TextView
            android:text="마이 페이지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="54dp"
            android:layout_height="43dp" app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            android:id="@+id/backsetting" app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.038"/>
    <ImageView
            android:layout_width="208dp"
            android:layout_height="187dp" app:srcCompat="@drawable/ic_baseline_face_24"
            android:id="@+id/profile"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="8dp"
    />
    <TextView
            android:text="이메일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/emailset"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/profile"
            android:textSize="30dp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="닉네임"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nickname"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30dp"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/emailset"/>
    <TextView
            android:text="얻은 뽀모 개수"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/nickname"
            android:textSize="30dp"/>
    <TextView
            android:text="오늘 : 0개"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pomotext"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/textView12"/>
</androidx.constraintlayout.widget.ConstraintLayout>