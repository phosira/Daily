<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Setting"
        android:background="#FFFFFF">

    <TextView
            android:text="설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.464" app:layout_constraintVertical_bias="0.141"/>
    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="448dp" android:id="@+id/cardView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="102dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="94dp">

            <ImageView
                    android:src="@drawable/ic_baseline_face_24"
                    android:layout_width="117dp"
                    android:layout_height="match_parent" android:id="@+id/profile"/>
            <TextView android:layout_width="315dp" android:layout_height="match_parent"
                      android:text="로그인 또는 가입  >"
                      android:id="@+id/login_signin"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textSize="30sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
            android:text="Daily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="50sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.46"/>

    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cardView3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/ic_baseline_access_alarm_24"
                    android:layout_width="97dp"
                    android:layout_height="match_parent" android:id="@+id/imageView6"
            />
            <TextView
                    android:text="뽀모타임 설정"
                    android:gravity="center"
                    android:layout_width="315dp"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_height="55dp" android:id="@+id/pomotimeset"
                    tools:layout_editor_absoluteY="575dp" tools:layout_editor_absoluteX="149dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/recomandcardview"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/cardView3"
            android:layout_marginTop="32dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView
                    android:src="@drawable/ic_baseline_thumb_up_24"
                    android:layout_width="97dp"
                    android:layout_height="55dp" android:id="@+id/imageView2"
                    android:layout_weight="1"/>
            <TextView android:layout_width="315dp" android:layout_height="match_parent"
                      android:text="친구에게 공유하기"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textSize="30dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/mailcaredview" app:layout_constraintTop_toBottomOf="@+id/recomandcardview"
            android:layout_marginTop="32dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/ic_baseline_email_24"
                    android:layout_width="97dp"
                    android:layout_height="55dp" android:id="@+id/imageView7"
            />
            <TextView
                    android:text="문의하기"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="315dp"
                    android:layout_height="match_parent" android:id="@+id/email"
            />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
            android:text="로그아웃"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/logout"
            android:textSize="20dp"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintTop_toBottomOf="@+id/mailcaredview"
            android:layout_marginTop="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>